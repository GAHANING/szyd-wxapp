<!--miniprogram/pages/authority/allData/list-detail.wxml-->
<view class="page">
	<view class="page__hd">
		<view class="page__title">Form</view>
		<view class="page__desc">表单输入</view>
	</view>
	<view class="page__bd">
		<view class="weui-cells__title">权限开关</view>
		<view class="weui-cells weui-cells_after-title" wx:for="{{modules}}">
			<view class="weui-cell weui-cell_switch">
				<view class="weui-cell__bd">{{item.name}}</view>
				<view class="weui-cell__ft">
					<switch id="{{item.module}}" checked="{{item.checked}}" bindchange="switchChange"/>
				</view>
			</view>
		</view>
		<view class="weui-cells__title">文本框</view>
		<view class="weui-cells weui-cells_after-title">
			<view class="weui-cell">
				<view class="weui-cell__bd">
					<input class="weui-input" placeholder="请输入文本" />
				</view>
			</view>
		</view>
		<button type="primary" class="submit" bindtap="submitForm">提交</button>
	</view>
</view>