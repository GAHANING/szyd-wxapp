/* pages/ip/index.wxss */
.search
{
  display: flex;
  flex-direction: row;
  justify-content:space-between;
  align-items: center;
  width:100%;
  height:100rpx;
  background-color:whitesmoke;
  margin-top: 5%;
  border:1rpx solid whitesmoke;
  border-radius: 5rpx;
  padding-right:20rpx;

}

/* 搜索框提示文字样式 */
.search input
{
  font-size:40rpx;
  font-family:'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
  padding-left:30rpx; 
}

.search button
{
  margin-top: -5px;
  font-size:15px;
}