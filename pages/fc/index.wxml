<view class="page">
    <view class="page__hd">
        <view class="page__title">虚拟化平台</view>
    </view>
    <view class="page__bd">

    <view wx:for="{{datas}}" wx:key="datas">
        <view class="weui-cells__title">{{item.name}}</view>
        <view class="weui-cells weui-cells_after-title">
            <view bindtap='goToHost' data-host="{{item.host}}" class="weui-cell weui-cell_access" hover-class="weui-cell_active"  url="./host/host?host={{JSON.stringify(item)}}">
                <view class="weui-cell__hd">
                    <image src="{{icon}}" style="margin-right: 5px;vertical-align: middle;width:20px; height: 20px;"></image>
                </view>
                <view class="weui-cell__bd">主机</view>
                <view class="weui-cell__ft weui-cell__ft_in-access">{{item.host.length}}</view>
            </view>

            <view bindtap='goToVm' data-vm="{{item}}" class="weui-cell weui-cell_access" hover-class="weui-cell_active">
                <view class="weui-cell__hd">
                    <image src="{{icon}}" style="margin-right: 5px;vertical-align: middle;width:20px; height: 20px;"></image>
                </view>
                <view class="weui-cell__bd">虚拟机</view>
                <view class="weui-cell__ft weui-cell__ft_in-access">{{item.vmstatic}}/{{item.vmtotal}}</view>
            </view>
        </view>
        </view>

    </view>
</view>